/* pages/template/index.wxss */

.quotation {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.quotation_menu {
  width: 100%;
  font-size: 27rpx;
  padding: 15rpx 20rpx;
  box-sizing: border-box;
  background: #f3f4f6;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}

.quotation_menu text {
  display: block;
  text-align: center;
}

.quotation_menu text:nth-of-type(1) {
  flex: 2.5;
  text-align: left;
}

.quotation_menu text:nth-of-type(2) {
  flex: 1.5;
}

.quotation_menu text:nth-of-type(3) {
  flex: 1;
}

.dataList {
  width: 100%;
  height: 65px;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}
.dataList:last-child{
border:0;
}
.dataList view {
  font-size: 28rpx;
}

.dataList view:nth-of-type(1) {
  width: 50%;
  display: flex;
  align-items: center;
}

.dataList view:nth-of-type(2) {
  width: 25%;
  height: 65px;
  line-height: 65px;
  text-align: center;
}

.dataList view:nth-of-type(3) {
  width: 25%;
  height: 65px;
  line-height: 65px;
  text-align: center;
}

.dataList view:nth-of-type(1) view {
  height: 50px;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  border: 0;
}

.dataList view:nth-of-type(1) text {
  display: block;
  width: 100%;
}

.dataList image {
  width: 47px;
  height: 47px;
  margin-right: 20rpx;
}


