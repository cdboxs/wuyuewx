<!--pages/member/assets/index.wxml 我的资产-->
<view class='myAssets_top'>
  <view>
    <text>账户余额(元)</text>
    <text style='display:none;'>充值</text>
  </view>
  <view>
    <text>{{assets.balance}}</text>
    <text style='display:none;'>体现</text>
  </view>
</view>
<view class='myAssets_sz'>
  <image src='../../image/dollar.png'></image>
  <text>持仓市值：{{assets.holdStockValue}}</text>
</view>
<view class='clickSwitch'>
  <view class='sNav'>
    <text class="{{current==1?'active':''}}" data-current="1" bindtap='clickSwitch'>行权记录</text>
    <text class="{{current==2?'active':''}}" data-current="2" bindtap='clickSwitch'>充值提现</text>
  </view>
  <scroll-view wx:if="{{current==1}}" scroll-y style='height:{{clickSwitchH}}px;' lower-threshold="50" bindscrolltolower="switchMoreData">
    <view class='xqjl'>
      <view class='xqjl_top'>
        <image src='../../image/photo.jpg'></image>
        <view class='top_info'>
          <view><text>于问问</text> <text>2秒</text></view>
          <text>录制祝福视频</text>
        </view>
        <view class='isok'>已拒绝</view>
      </view>
      <view class='xqjl_btn'>
        <text>预约时间：2018-12-12 08：15：00</text>
        <text>预约地点：1555555</text>
      </view>
    </view>
  </scroll-view>
  <scroll-view wx:if="{{current==2}}" scroll-y style='height:{{clickSwitchH}}px;' lower-threshold="50" bindscrolltolower="switchMoreData">
    <view class='cztx'>
      <view>
        <text>充值0.01元</text>
        <text>2018-08-27 17:13:32</text>
      </view>
      <view class='green'><text>+0.01</text></view>
    </view>
    <view class='cztx'>
      <view>
        <text>充值0.01元</text>
        <text>2018-08-27 17:13:32</text>
      </view>
      <view class='green'><text>+0.01</text></view>
    </view>
  </scroll-view>

</view>
