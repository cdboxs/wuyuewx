/* pages/member/index.wxss */

page {
  background: #eee;
}

/* 我的频道 */

.usertop {
  width: 100%;
  height: 250rpx;
  position: relative;
}
.usertop .usertopBG{
  display: block;
  width:100%;
  height:250rpx;
  position: absolute;top:0;left:0;
}
.usertopInfos{
   width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: absolute;top:0;left:0;
}
.usertop view:nth-of-type(1) image {
  display: block;
  width: 150rpx;
  height: 150rpx;
  margin: 0 30rpx 0 40rpx;
  border-radius: 50%;
}

.usertop view:nth-of-type(2) {
  width:70%;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: center;
}

.usertop view:nth-of-type(2) text:first-child {
  display: block;
  width:100%;
  color: #fff;
  font-size: 33rpx;
  padding-bottom:10rpx;
  margin:0 30rpx 20rpx 0;
  border-bottom:1rpx solid #ddd;
}
.usertop view:nth-of-type(2) text:last-child {
  color:#fff;
  font-size: 30rpx;
  margin-left:30rpx;
}

.usertop view:nth-of-type(2) image {
  display: block;
  width: 94px;
  height: 27px;
  margin:0;
}

.user_order {
  width: 100%;
  overflow: hidden;
}

.user_o_t {
  width: 100%;
  padding: 30rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  box-sizing: border-box;
}

.user_o_t text:nth-of-type(2) {
  color: #76b5fc;
}

.user_o_menu {
  width: 100%;
  padding:40rpx 0;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  box-sizing: border-box;
}

.user_o_menu view {
  width: 25%;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
}

.user_o_menu image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  padding-bottom:10rpx;
}
.user_o_menu text {
  display: block;
  width: 100%;
  color: #555;
  text-align: center;
}

/* 主菜单 */
.user_menu{
  width:100%;
  margin-top:20rpx;
  background:#fff;
  box-sizing: border-box;
}
.user_menu view{
  width:100%;
  padding:30rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}
.user_menu view image:nth-of-type(1){
  display:block;
  width:40rpx;
  height:40rpx;
}
.user_menu view text{
  width:75%;
  font-size: 30rpx;
  color:#666;
}
.user_menu view image:nth-of-type(2){
  display:block;
  width:32rpx;
  height:32rpx;
}